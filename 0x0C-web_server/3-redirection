#!/usr/bin/env bash
# Script that installs Nginx server and redirects.
sudo apt-get -y update
sudo apt-get -y install nginx
echo "Hello World!" | sudo tee /var/www/html/index.html

# Define the redirect rule
location="\\\n\tlocation = /redirect_me {\n\t\t return 301 https://www.github.com/MosesOdinaka;\n\t}\n"

# insert the redirect rule into the server block
sudo sed -i "14i $location" /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
sudo systemctl restart nginx
